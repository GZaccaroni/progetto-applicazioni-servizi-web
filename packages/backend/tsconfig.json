{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strictNullChecks": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "lib": ["es2022"],
  "references": [{ "path": "../common" }],
  "exclude": [
    "node_modules"
  ]
}
